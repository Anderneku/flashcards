{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "fancy-cards",
  "version": "0.1.0",
  "identifier": "com.bossmans.fancycards",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"

  },
  "app": {
    "windows": [
      {
        "url": "index.html",
        "title": "Fancy Cards",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/favicon.ico"
    ]
  }
}
